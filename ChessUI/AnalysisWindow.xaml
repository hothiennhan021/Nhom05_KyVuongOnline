<Window x:Class="ChessUI.AnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phân Tích Trận Đấu" Height="700" Width="1000" Background="#202020" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#333"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" Margin="0,0,10,0">
            <Grid x:Name="BoardGrid" Width="600" Height="600">
                <Grid.Background>
                    <SolidColorBrush Color="#202020"/>
                </Grid.Background>
                <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8"/>
                <Canvas x:Name="ArrowCanvas" Width="600" Height="600" IsHitTestVisible="False"/>
            </Grid>
        </Viewbox>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#252525" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Thống Kê" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="White" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Black" Foreground="White" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Text="Brilliant" Foreground="#1AB5B8" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wBrilliant" Grid.Row="1" Grid.Column="1" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Image Source="Assets/Icons/brilliant.png" Grid.Row="1" Grid.Column="2" Width="20" Height="20"/>
                    <TextBlock x:Name="bBrilliant" Grid.Row="1" Grid.Column="3" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Text="Best" Foreground="#6BC235" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wBest" Grid.Row="2" Grid.Column="1" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Image Source="Assets/Icons/best.png" Grid.Row="2" Grid.Column="2" Width="20" Height="20"/>
                    <TextBlock x:Name="bBest" Grid.Row="2" Grid.Column="3" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="3" Text="Mistake" Foreground="#FFA333" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wMistake" Grid.Row="3" Grid.Column="1" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Image Source="Assets/Icons/mistake.png" Grid.Row="3" Grid.Column="2" Width="20" Height="20"/>
                    <TextBlock x:Name="bMistake" Grid.Row="3" Grid.Column="3" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="4" Text="Blunder" Foreground="#FA412D" VerticalAlignment="Center"/>
                    <TextBlock x:Name="wBlunder" Grid.Row="4" Grid.Column="1" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Image Source="Assets/Icons/blunder.png" Grid.Row="4" Grid.Column="2" Width="20" Height="20"/>
                    <TextBlock x:Name="bBlunder" Grid.Row="4" Grid.Column="3" Text="-" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#252525" CornerRadius="5" Margin="0,0,0,10">
                <ListView x:Name="lstMoves" Background="Transparent" Foreground="White" 
          SelectionMode="Single" 
          SelectionChanged="lstMoves_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="#" DisplayMemberBinding="{Binding TurnNumber}" Width="30"/>

                            <GridViewColumn Header="White" Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Cursor="Hand" MouseLeftButtonUp="WhiteMove_Clicked">
                                            <TextBlock Text="{Binding WhiteMove}" FontWeight="Bold" Width="40" Foreground="White" VerticalAlignment="Center"/>

                                            <Image Source="{Binding WhiteIcon}" Width="16" Height="16" Margin="5,0"/>

                                            <TextBlock Text="{Binding WhiteEval}" Foreground="{Binding WhiteColor}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Black" Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Cursor="Hand" MouseLeftButtonUp="BlackMove_Clicked">
                                            <TextBlock Text="{Binding BlackMove}" FontWeight="Bold" Width="40" Foreground="White" VerticalAlignment="Center"/>

                                            <Image Source="{Binding BlackIcon}" Width="16" Height="16" Margin="5,0"/>

                                            <TextBlock Text="{Binding BlackEval}" Foreground="{Binding BlackColor}" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="❮ Prev" Width="80" Height="30" Click="btnPrev_Click" Background="#444" Foreground="White" Margin="5"/>
                <Button Content="Next ❯" Width="80" Height="30" Click="btnNext_Click" Background="#444" Foreground="White" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>